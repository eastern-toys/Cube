<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="puzzleList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>puzzle1</value>
                <value>puzzle2</value>
                <value>puzzle3</value>
                <value>puzzle4</value>
                <value>puzzle5</value>
                <value>puzzle6</value>
                <value>puzzle7</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="visibilityStatusSet" class="edu.mit.puzzle.cube.modules.model.StandardVisibilityStatusSet"/>
    <bean id="eventFactory" class="edu.mit.puzzle.cube.core.events.CoreEventFactory"/>

    <bean id="coreEventProcessor" class="edu.mit.puzzle.cube.core.events.CompositeEventProcessor">
        <property name="eventProcessors">
            <list>
                <ref bean="setToSolvedOnCorrectSubmission"/>
                <ref bean="huntUnlocker"/>
            </list>
        </property>
    </bean>

    <bean id="setToSolvedOnCorrectSubmission" class="edu.mit.puzzle.cube.modules.events.SetToSolvedOnCorrectSubmission">
        <constructor-arg name="huntStatusStore" ref="huntStatusStore"/>
    </bean>
    <bean id="huntUnlocker" class="edu.mit.puzzle.cube.huntimpl.linearexample.LinearExampleUnlockEventProcessor">
        <constructor-arg name="huntStatusStore" ref="huntStatusStore"/>
    </bean>

</beans>