<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- This specifies what hunt you're running -->
    <import resource="hunts/linear-example-hunt/hunt-dependencies.xml"/>

    <!-- This specifies what teams are in the hunt-->
    <bean id="teamList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>testerteam</value>
                <value>testerteam2</value>
            </list>
        </constructor-arg>
    </bean>

    <!-- This imports core material -->
    <import resource="core/core-config.xml"/>

    <!-- This is specific to the system environment -->
    <bean id="connectionFactory" class="edu.mit.puzzle.cube.core.db.InMemoryConnectionFactory">
        <constructor-arg name="visibilityStatusSet" ref="visibilityStatusSet"/>
        <constructor-arg name="teamIdList" ref="teamList"/>
        <constructor-arg name="puzzleIdList" ref="puzzleList"/>
    </bean>

</beans>